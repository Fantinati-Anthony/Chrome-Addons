{
  "manifest_version": 3,
  "name": "AT Unified Toolkit",
  "version": "1.4.6",
  "description": "Suite d'outils unifiee: raccourcis bureau, injection CSS/JS, redimensionnement, couleurs, bookmarks, historique, emails, ChatGPT, telechargements, synthese vocale et plus.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "tabs",
    "downloads",
    "scripting",
    "storage",
    "contextMenus",
    "bookmarks",
    "history",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content-scripts/chatgpt-ding.js"]
    },
    {
      "matches": ["https://platform.openai.com/playground*"],
      "js": ["content-scripts/chatgpt-ding.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/css-inject.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/speech-synthesis.js"]
    }
  ],
  "options_page": "options.html"
}
